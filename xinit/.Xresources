/* includes */
#include ".Xresources.d/rxvt-unicode"
#include ".Xresources.d/sxiv"

/* xcursor */
Xcursor.theme: breeze_cursors
Xcursor.size: 24

/* correct non-HiDPI scaling */
Xft.dpi: 96

/* font settings */
Xft.antialias: true
Xft.rgba: rgb

Xft.autohint: false
Xft.hinting: true
Xft.hintstyle: hintlight
Xft.lcdfilter: lcddefault
