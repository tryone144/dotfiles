Xcursor.theme: Oxygen Neon

/* font settings */
/*Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb*/

/* interface */
URxvt*.iconFile: terminal
URxvt*.depth: 32
URxvt*.font: xft:Ubuntu Mono derivative Powerline:size=12
URxvt*.boldFont: xft:Ubuntu Mono derivative Powerline:bold:size=12
URxvt*.geometry: 132x43
URxvt*.scrollstyle: plain
URxvt*.scrollBar_right: true
URxvt*.secondaryScreem: 1
URxvt*.secondaryScroll: 0
URxvt*.scrollTtyOutput: false
URxvt*.scrollWithBuffer: true
URxvt*.scrollTtyKeypress: true
URxvt*.print-pipe: "cat > ~/.urxvt/$(date).dump"
URxvt*.cursorBlink: true
URxvt*.perl-ext-common: default,matcher,vtwheel,font-size
URxvt*.urlLoader: chromium
URxvt*.keysym.Control-0x2b: perl:font-size:increase
URxvt*.keysym.Control-0x2d: perl:font-size:decrease
URxvt*.keysym.Control-0: perl:font-size:reset
URxvt*.font-size.step: 4

/* colors */
URxvt*.foreground: #00FF00
URxvt*.background: [70]#000000
URxvt*.color0: #000000
URxvt*.color1: #CD0000
URxvt*.color2: #00CD00
URxvt*.color3: #CDCD00
URxvt*.color4: #1E90FF
URxvt*.color5: #CD00CD
URxvt*.color6: #00CDCD
URxvt*.color7: #E5E5E5
URxvt*.color8: #4C4C4C
URxvt*.color9: #FF0000
URxvt*.color10: #00FF00
URxvt*.color11: #FFFF00
URxvt*.color12: #4682B4
URxvt*.color13: #FF00FF
URxvt*.color14: #00FFFF
URxvt*.color15: #FFFFFF

