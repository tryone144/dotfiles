# PLUGIN config
[Plugins]
Output=i3bar
Input=pulseaudio;nm;upower;time;

# NETWORKMANAGER config
[NetworkManager]
Interfaces=eth0;wlan0;

[NetworkManager Formats]
Addresses=IPv4

# PULSEAUDIO config
[PulseAudio]

# TIME config
[Time]
Interval=5
Format=%a, %d. %b %H:%M

