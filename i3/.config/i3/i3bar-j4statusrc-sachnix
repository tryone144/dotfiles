[Plugins]
Output=i3bar
Input=sensors;nm;time;

[i3bar]
NoStateColor=#FFFFFF
NoClickEvents=true

[Sensors]
Sensors=k10temp-*

[NetworkManager]
Interfaces=eth0

[NetworkManager Formats]
Addresses=IPv4

[Time]
Interval=1
Format=%a, %d. %b %H:%M:%S

