#!/bin/bash
#
# I3WM
# autostart apps without desktop entry (started with dapper)
#   needs: [nitrogen]
#          [dunst]
#          [compton]
#          [pasystray]
#
# file: ~/.config/i3/autostart
# v0.2 / 2014.12.17
#
# (c) 2014 Bernd Busse
#

# (re)set wallpaper with nitrogen
nitrogen --restore &

# start notification-daemon 'dunst'
dunst &

# start compositor 'compton'
compton &

# start audio 'jack-rack'; 'qjackctl', 'pavol.sh' only on desktop computer
if [ ${HOSTNAME} == "sachnix" ]; then
    # start audio 'pasystray'
    pasystray &
    
    jack-rack -n -c 6 ${HOME}/.config/jack/equalizer &
    qjackctl &
    #pavol.sh &
fi

